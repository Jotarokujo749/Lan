<body>
  <h1>ZAMASU X1 – Fusion Divine</h1>
  <input type="text" id="mot" placeholder="Ex : galaxie, trahison, énergie">
  <button onclick="envoyer()">Fusionner</button>

  <div id="result">Réponse fusionnée ici...</div>

  <script>
    async function envoyer() {
      const mot = document.getElementById("mot").value.trim();
      const resDiv = document.getElementById("result");
      resDiv.textContent = "Recherche en cours dans 20 dimensions...";

      try {
        const res = await fetch("http://localhost:5002/fusion", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ mot })
        });

        const data = await res.json();
        resDiv.textContent = data.fusion || "Erreur de fusion.";
      } catch (err) {
        resDiv.textContent = "Erreur : impossible de contacter le serveur.";
      }
    }
  </script>
</body>
