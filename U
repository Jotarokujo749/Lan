<body>
  <h1>ZAMASU X1 – Scraping Divin</h1>
  <input type="text" id="question" placeholder="Ex : à quoi sert une étoile ?">
  <button onclick="envoyer()">Demander</button>

  <div id="result">Résultat ici...</div>

  <script>
    async function envoyer() {
      const question = document.getElementById("question").value.trim();
      const resDiv = document.getElementById("result");
      resDiv.textContent = "Zamasu explore l’univers numérique...";

      try {
        const res = await fetch("http://localhost:5005/zamasu", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ question })
        });

        const data = await res.json();
        resDiv.textContent = data.response || "Aucune réponse claire trouvée.";
      } catch (err) {
        resDiv.textContent = "Erreur : impossible de contacter le serveur.";
      }
    }
  </script>
</body>
